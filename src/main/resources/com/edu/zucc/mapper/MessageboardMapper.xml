<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.edu.zucc.mapper.MessageboardMapper">
    <insert id="add" useGeneratedKeys="true" keyProperty="idrsv">
        INSERT INTO message_board(id,title,release_time,content,user) VALUE (#{id},#{title},#{release_time},#{content},#{user})
    </insert>

    <delete id="delete">
        DELETE FROM message_board WHERE id=#{id}
    </delete>

    <update id="update">
        UPDATE message_board SET id=#{id}
        <if test="title!=null">
            ,title=#{title}
        </if>
        <if test="release_time!=null">
            ,release_time=#{release_time}
        </if>
        <if test="content!=null">
            ,content=#{content}
        </if>
        <if test="user!=null">
            ,user=#{user}
        </if>
        WHERE id=#{id}
    </update>

    <select id="findAll" resultType="Messageboard">
        SELECT * FROM message_board
    </select>

    <select id="findByKey" resultType="Messageboard">
        SELECT * FROM message_board WHERE id=#{id}
    </select>
</mapper>
