<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.edu.zucc.mapper.WorkerMapper">
    <insert id="add" useGeneratedKeys="true" keyProperty="idrsv">
        INSERT INTO worker(id,worker_name,position,daily_wage) VALUE (#{id},#{worker_name},#{position},#{daily_wage})
    </insert>

    <delete id="delete">
        DELETE FROM worker WHERE id=#{id}
    </delete>

    <update id="update">
        UPDATE worker SET id=#{id}
        <if test="worker_name!=null">
            ,worker_name=#{worker_name}
        </if>
        <if test="position!=null">
            ,position=#{position}
        </if>
        <if test="daily_wage!=null">
            ,daily_wage=#{daily_wage}
        </if>
        WHERE id=#{id}
    </update>

    <select id="findAll" resultType="Worker">
        SELECT * FROM worker
    </select>

    <select id="findByKey" resultType="Worker">
        SELECT * FROM worker WHERE id=#{id}
    </select>
</mapper>
